{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0.0",
    "permissions": [
        "storage",
        "tabs",
        "*://*.dancetime.io/*"
    ],
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "scripts": ["build/background.js"]
    },
    "run_at": "document_idle",
    "content_scripts": [
        {
            "matches": [
                "*://*.dancetime.io/*",
                "*://localhost/**"
            ],
            "js": [
                "build/content_script_main.js"
            ]
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "build/content_script_iframe.js"
            ],
            "all_frames": true
        }
    ]
}