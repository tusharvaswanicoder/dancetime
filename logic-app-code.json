            }
        },
        "staticResults": {
            "Send_email_(V2)0": {
                "outputs": {
                    "headers": {},
                    "statusCode": "OK"
                },
                "status": "Succeeded"
            }
        },
        "triggers": {
            "manual": {
                "conditions": [],
                "inputs": {
                    "schema": {
                        "properties": {
                            "email": {
                                "type": "string"
                            },
                            "magiclink": {
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                },
                "kind": "Http",
                "operationOptions": "EnableSchemaValidation",
                "runtimeConfiguration": {
                    "secureData": {
                        "properties": [
                            "inputs"
                        ]
                    }
                },
                "type": "Request"
            }
        }
    },
    "parameters": {
        "$connections": {
            "value": {
                "gmail": {
