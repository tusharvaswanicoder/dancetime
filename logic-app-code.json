            "Send_email_(V2)": {
                "inputs": {
                    "body": {
                        "Body": "<p><span style=\"font-size: 18px\">Hey there! ðŸ‘‹</span><br>\n<br>\nIt looks like you're ready to dance! Just click this @{variables('magicLink')} to get started.<br>\n<br>\nAny questions, comments, or just want to chat? Feel free to reply to this email. ðŸ˜Š<br>\n<em>- Dance Time</em></p>",
                        "Subject": "It's Dance Time! âœ¨",
                        "To": "@triggerBody()?['email']"
