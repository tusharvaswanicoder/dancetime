            },
            "Initialize_variable": {
                "inputs": {
                    "variables": [
                        {
                            "name": "magicLink",
                            "type": "string",
                            "value": "<a href=\"@{triggerBody()?['magiclink']}\">magic link</a>"
                        }
                    ]
                },
                "runAfter": {
                    "Condition": [
                        "Succeeded"
                    ]
                },
